DROP TABLE IF EXISTS campaign,
                     category,
                     contacts,
                     subcategory, 

CREATE TABLE campaign (
    Primary Key cf_id INT,
	contact_id INT,
	company_name VARCHAR,
	description VARCHAR,
	goal INT,
	pledged INT,
	outcome VARCHAR,
	backers_count INT,
	country VARCHAR,
	currency VARCHAR,
	launch_date date,
	end_date date,
	Foreign Key category_id REFERENCES category(category_id),
	Foreign Key subcategory_id REFERENCES subcategory(subcategory_id)
);

Select * from campaign

CREATE TABLE category (
    Primary Key category_id VARCHAR,
	category VARCHAR
);

Select * from category

CREATE TABLE subcategory (
    Primary Key subcategory_id VARCHAR,
	subcategory VARCHAR
);

Select * from subcategory

CREATE TABLE contacts (
    Primary Key contact_id INT,
	email VARCHAR,
	first_name VARCHAR,
	last_name VARCHAR
);

Select * from contacts
